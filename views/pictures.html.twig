{% extends "layout.html.twig" %}
{% block title %}
	<title>The Funniest Pictures</title>
{% endblock %}
{% block leftsidemenu %}

	{% include 'leftsidemenu.html.twig' with {'pictureCategories': pictureCategories,'gameCategories': gameCategories %}

{% endblock %}

{% block content %}
<section class="portfolio-full-width-grid">
<div class="portfolio-filter-wrapper">
	<a href="#" title="All" data-category-slug="all" class="active">All</a>
	{% for item in pictureCategories %}
			
		<a href="#" title="{{ item.categorie }}" data-category-slug="{{ item.categorie }}">{{ item.categorie }}</a>
			
	{% endfor %}
			
		</div>
<div id="grid" class="clearfix">

			{% for item in pictures %}
					<div class="thumb" data-project-categories="{{item.categorie}}">
						
						
							<a href="/funnypictures/funnypicture/{{(item.filename|split('.'))[0]}}" title="{{item.title}}" data-caption="{{item.title}}">
								<img src="/data/pics/spictures/{{item.cover}}" alt="{{item.title}} funny pictures">

							</a>
						
					</div>
					
			{% endfor %}
			
			
		</div>
	{% include 'pagination/pictures.html.twig' with {'barepagination':barePagination, 'nbrPage':nbrPage} %}

</section>
{% endblock %}
